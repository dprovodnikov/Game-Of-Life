{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["airbnb-typescript"],
  "rules": {
    "arrow-body-style": "off",
    "arrow-parens": ["error", "as-needed"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}